<%= tag.li style: do %>
  <% if facet_count.branch? %>
    <%= tag.a data: { bs_toggle: 'collapse', action: 'mouseover->hierarchical-facet-value#load' }, href: "##{children_collapse_id}", role: 'button', 'aria-expanded': expanded?, 'aria-controls': children_collapse_id, title: "Toggle #{label}" do %>
      <%# Avoiding whitespace issues %>
      <%= '+' -%>
    <% end %>
  <% end %>

  <%= render Search::FacetValueComponent.new(label:, count:, search_form:, form_field:, value:, selected: selected?, data: { turbo: false }) %>

  <% if facet_count.branch? %>
    <%= tag.div id: children_collapse_id, class: collapse_classes do %>
      <%= helpers.turbo_frame_tag children_turbo_id, src: children_path, loading: expanded? ? 'eager' : 'lazy' do %>
        Loading...
      <% end %>
    <% end %>
  <% end %>
<% end %>
