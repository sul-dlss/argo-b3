<%= render Search::FacetSectionComponent.new(label:, show: search_form.selected?(key: form_field)) do %>
  <%= helpers.form_with model: search_form, scope: :search, url: search_path, method: :get, class: 'facet-values' do |form| %>
    <%= render Search::FormHiddenFieldsComponent.new(form_builder: form, search_form:, form_field:) %>
    <%= render Search::CheckboxFacetInputComponent.with_collection(facet_counts, search_form:, form_field:, form_builder: form) %>
    <%= form.submit 'Filter', class: 'btn btn-primary btn-sm mt-3' %>
  <% end %>
<% end %>
