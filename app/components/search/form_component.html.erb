<%= helpers.form_with model: search_form, scope: :search, url:, method: :get do |form| %>
  <%= render Search::FormHiddenFieldsComponent.new(form_builder: form, search_form:) %>
  <%= form.label :query, label %>
  <%= form.text_field :query %>
  <%= form.submit 'Search' %>
  <div>
    <%= form.checkbox :include_google_books, include_hidden: false %>
    <%= form.label :include_google_books, 'Include Google Books' %>
  </div>
<% end %>
