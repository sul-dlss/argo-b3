<%= render SdrViewComponents::Structure::HeaderComponent.new(title: 'Argo: Build Back Better', variant: :dark, background_color: '84, 73, 72') do |header| %>
  <%= header.with_primary_navigation_link do %>
    <%= render SdrViewComponents::Elements::Navigation::NavItemComponent.new(text: 'Feedback', path: 'mailto:argo-feedback@lists.stanford.edu') %>
    <%= render SdrViewComponents::Elements::Navigation::NavItemComponent.new(text: logged_in_text) %>
  <% end %>
  <%= header.with_secondary_navigation_link do %>
    <%= render SdrViewComponents::Elements::Navigation::NavItemComponent.new(text: 'Search', path: root_path) %>
    <%= render SdrViewComponents::Elements::Navigation::NavItemComponent.new(text: 'Report', path: report_path) %>
    <%= render SdrViewComponents::Elements::Navigation::NavItemComponent.new(text: 'Workflow grid', path: workflow_grid_path) %>
    <% if Settings.feature_flags.bulk_actions %>
      <%= render SdrViewComponents::Elements::Navigation::DropdownMenuComponent.new(text: 'Bulk actions') do |dropdown| %>
        <% dropdown.with_item do %>
          <%= link_to 'New', new_bulk_action_path, class: 'dropdown-item' %>
        <% end %>
        <% dropdown.with_item do %>
          <%= link_to 'History', bulk_actions_path, class: 'dropdown-item' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
